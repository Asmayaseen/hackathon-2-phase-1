# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neon PostgreSQL Connection String
# Format: postgresql://username:password@host/database?sslmode=require
# Get this from: https://console.neon.tech/
DATABASE_URL=postgresql://your-username:your-password@your-host.neon.tech/your-database?sslmode=require
# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Better Auth Secret Key
# Must match frontend BETTER_AUTH_SECRET
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-generated-secret-key-here

# JWT Token Expiry (in seconds)
# Default: 604800 (7 days)
JWT_EXPIRY=604800

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed Origins (comma-separated)
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port
PORT=8000

# Server Host
# Use 0.0.0.0 to allow external connections
HOST=0.0.0.0

# Environment (development | production)
ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base Path
API_PREFIX=/api

# API Version
API_VERSION=v1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG | INFO | WARNING | ERROR | CRITICAL)
LOG_LEVEL=INFO

# Log Format (json | text)
LOG_FORMAT=json

# =============================================================================
# RATE LIMITING (Optional - Phase III+)
# =============================================================================

# Max Requests per Minute per User
# RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# REDIS CONFIGURATION (Optional - Phase III+)
# =============================================================================

# Redis URL for caching/sessions
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# PHASE III - AI CHATBOT CONFIGURATION
# =============================================================================

# OpenAI API Key (Required for Phase III)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Selection
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# MCP Server Configuration
# Server name for Model Context Protocol
MCP_SERVER_NAME=todo-mcp-server

# MCP Server Version
MCP_SERVER_VERSION=1.0.0

# MCP Server Description
MCP_SERVER_DESCRIPTION=MCP tools for Evolution of Todo task management

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Sentry DSN for Error Tracking
# SENTRY_DSN=https://...@sentry.io/...

